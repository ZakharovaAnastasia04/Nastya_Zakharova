#include <iostream>
#include <string>
#include <vector>
int main(){
    int n,x,t,k;
    std::cin>>t;
    for (int y=0;y<t;y+=1){
        std:: vector <int> a(n);
         for(int i=0;i<n;i+=1){  
        std::cin>>a[i]; 
         if (a[i]+a[i+1]=0) {
             k:=-1;
             }
             if (a[i]=1){
                 k=+1;
                 }
                 if (a[i]+a[i+1]=2){
                     k=+5;
                     }
                     if (a[i]=0){
                         k=+0;
                         }
    }
    }
 std::count<<k;
 } 
